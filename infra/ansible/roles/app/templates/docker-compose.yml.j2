services:
  api:
    image: "{{ docker_api_image }}"
    restart: unless-stopped
    env_file: .env
    ports:
      - "{{ api_port }}:8000"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  web:
    image: "{{ docker_web_image }}"
    restart: unless-stopped
    depends_on: [api]
    ports:
      - "{{ web_port }}:80"
